{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}/build/debug",
      "stopOnEntry": false
    },
    {
      "name": "ASan",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}/build/asan",
      "env": {
        "ASAN_OPTIONS": "detect_leaks=1:abort_on_error=1"
      }
    }
  ]
}
